{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}


    <div class="container mt-5">
            <h1>Ajouter un article</h1>
            {{ form_start(form) }}

            {{ form_row(form.titre, {'attr': {'placeholder' : 'Le titre'}}) }}
            {{ form_row(form.imageFile, {'attr': {'placeholder' : 'Le chemin Img'}}) }}
            {{ form_row(form.contenuArticle, {'attr': {'placeholder' : 'Le contenu'}}) }}
            {{ form_row(form.dateArticle, {'attr': {'placeholder' : 'La date'}}) }}

        <button type="submit" class="btn btn-danger mt-5 mb-5">Ajouter</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
